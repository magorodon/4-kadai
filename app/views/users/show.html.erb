<body>
<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
<div>
  <h2>User info</h2>
  <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_profile_image(40,40) %>
  <% end %>


  <p><%= @user.name %></p>
  <p>自己紹介</p>
  <p><%= @user.introduction %></p>


    
  <%= link_to edit_user_path(@user) do%>
   <i class="fas fa-user-cog"></i>
   <% end %>
</div>
<div>
  <h2>New book</h2>
  <%= form_with model: @new_book, local:true do |f| %>

    <label>本のタイトル</label>
    <div>
      <%= f.text_field :title %>
    </div>
    <label>感想</label>
    <div>
      <%= f.text_area :body %>
    </div>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-striped">
    <div class="col-md-8 offset-md-1">
    <thead>
      <tr>
        <th></th>
        <th>本のタイトル</th>
        <th>感想</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(40,40) %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
</body>
