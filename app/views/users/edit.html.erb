<h2>User info</h2>
<body>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "Image_Id", accept: "image/*" %>
  <label for='inputIntroduction'>introduction</label>
  <%= f.text_field :introduction, id:"inputIntroduction", placeholder:"introduction"%>
  <%= f.submit "Update User" %>
<% end %>
</body>